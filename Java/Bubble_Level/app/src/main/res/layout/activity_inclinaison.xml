<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.simon.bubble_level.Activity.Activity_inclinaison"
    android:id="@+id/drawer_layout_incl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/windowBackground">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <com.example.simon.bubble_level.Drawing.Drawing_inclinaison
        android:id="@+id/custViewincl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        custom:circleColor="@color/Tuile_color"
        custom:circleLabel="Hello"
        custom:labelColor="#080808"
        custom:rectCol="#080808"
        />

</RelativeLayout>
<fragment
android:id="@+id/fragment_nav_drawer"
android:name="com.example.simon.bubble_level.Activity.FragmentDrawer"
android:layout_width="@dimen/nav_drawer_width"
android:layout_height="match_parent"
android:layout_gravity="start"
app:layout="@layout/fragment_nav_drawer"
tools:layout="@layout/fragment_nav_drawer" />
    </android.support.v4.widget.DrawerLayout>
